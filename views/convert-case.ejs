        <!-- Case Conversion Buttons -->
        <div class="p-6">
            <!-- First Row -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-4">
                <button onclick="convertCase('sentence')"
                    class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200">
