<!-- PHP Basics Online Test Page -->
<section class="py-24 bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-6">

        <!-- Test Header -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-montserrat font-extrabold text-gray-800 mb-2">
                PHP Basics Online Test
            </h2>
            <p class="text-gray-600 text-lg md:text-xl">
                Question <span id="current-question">1</span> of 10
            </p>
            <div class="mt-2 text-gray-700 font-semibold">
                Time Remaining: <span id="timer">10:00</span>
            </div>
        </div>

        <!-- Question Card -->
        <div class="bg-white rounded-3xl shadow-2xl p-10 md:p-16 mb-8 transform transition-transform duration-500 hover:-translate-y-1">
            <h3 class="text-2xl font-bold text-gray-800 mb-6" id="question-text">
                What is the correct way to start a PHP script?
            </h3>

            <!-- Options -->
            <div class="grid gap-4">
                <button class="option-btn w-full text-left px-6 py-3 bg-gray-100 hover:bg-primary hover:text-white rounded-xl transition-colors duration-300 text-lg">
                    &lt;?php
                </button>
                <button class="option-btn w-full text-left px-6 py-3 bg-gray-100 hover:bg-primary hover:text-white rounded-xl transition-colors duration-300 text-lg">
                    &lt;script&gt;
                </button>
                <button class="option-btn w-full text-left px-6 py-3 bg-gray-100 hover:bg-primary hover:text-white rounded-xl transition-colors duration-300 text-lg">
                    &lt;php&gt;
                </button>
                <button class="option-btn w-full text-left px-6 py-3 bg-gray-100 hover:bg-primary hover:text-white rounded-xl transition-colors duration-300 text-lg">
                    &lt;?&gt;
                </button>
            </div>
        </div>

        <!-- Navigation -->
        <div class="flex justify-between items-center">
            <button id="prev-btn"
                class="px-6 py-3 bg-gray-200 text-gray-700 rounded-xl shadow hover:bg-gray-300 transition-colors duration-300">
                Previous
            </button>
            <button id="next-btn"
                class="px-6 py-3 bg-primary text-white rounded-xl shadow hover:shadow-xl hover:scale-105 transition-all duration-300">
                Next
            </button>
        </div>

        <!-- Progress Bar -->
        <div class="mt-10 h-3 w-full bg-gray-200 rounded-full overflow-hidden">
            <div id="progress-bar" class="h-full w-10 bg-gradient-to-r from-primary to-cyan-500 transition-all duration-500"></div>
        </div>

    </div>
</section>
