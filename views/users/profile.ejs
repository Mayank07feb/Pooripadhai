<section class="flex-1 min-h-screen flex items-center justify-center bg-gray-50 md:ml-64 p-6 md:p-10 overflow-auto">
  <div class="w-full max-w-4xl bg-white p-8 md:p-12 rounded-3xl shadow-2xl">
    
    <!-- Profile Header -->
    <div class="flex flex-col items-center mb-10">
      <img src="/assets/img/user-avatar.png" alt="User Avatar" class="w-28 h-28 md:w-32 md:h-32 rounded-full mb-4 object-cover shadow-lg">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-1">John Doe</h2>
      <p class="text-gray-500 text-sm md:text-base">Member since 01-Jan-2025</p>
    </div>

    <!-- Profile Details -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-gray-700">
      <div class="space-y-4">
        <p><span class="font-semibold text-gray-900">Name:</span> John Doe</p>
        <p><span class="font-semibold text-gray-900">Email:</span> johndoe@example.com</p>
        <p><span class="font-semibold text-gray-900">Phone:</span> +91 94128 92908</p>
      </div>
      <div class="space-y-4">
        <p><span class="font-semibold text-gray-900">Date of Birth:</span> 15-Apr-2000</p>
        <p><span class="font-semibold text-gray-900">Gender:</span> Male</p>
        <p><span class="font-semibold text-gray-900">Address:</span> 123, ABC Street, Agra, Uttar Pradesh, India</p>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="mt-10 grid grid-cols-1 sm:grid-cols-3 gap-6 text-center">
      <div class="bg-blue-50 p-6 rounded-xl shadow hover:shadow-lg transition">
        <p class="text-gray-500 mb-2">Courses Completed</p>
        <h3 class="text-2xl font-bold text-gray-900">5</h3>
      </div>
      <div class="bg-green-50 p-6 rounded-xl shadow hover:shadow-lg transition">
        <p class="text-gray-500 mb-2">Tests Taken</p>
        <h3 class="text-2xl font-bold text-gray-900">12</h3>
      </div>
      <div class="bg-yellow-50 p-6 rounded-xl shadow hover:shadow-lg transition">
        <p class="text-gray-500 mb-2">Contests Participated</p>
        <h3 class="text-2xl font-bold text-gray-900">3</h3>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-10 flex flex-col md:flex-row gap-4 justify-center">
      <a href="/settings"
        class="w-full md:w-auto px-8 py-3 bg-primary text-white rounded-xl hover:bg-primary-600 transition font-semibold text-center">
        Edit Profile
      </a>
      <a href="#change-password"
        class="w-full md:w-auto px-8 py-3 bg-gray-200 text-gray-800 rounded-xl hover:bg-gray-300 transition font-semibold text-center">
        Change Password
      </a>
    </div>

    <!-- Change Password Form -->
    <div id="change-password" class="mt-12 border-t pt-10">
      <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">Change Password</h3>
      <form class="space-y-6 max-w-lg mx-auto">
        <!-- Current Password -->
        <div>
          <label for="current-password" class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
          <input type="password" id="current-password" name="current-password" 
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:outline-none">
        </div>
        <!-- New Password -->
        <div>
          <label for="new-password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
          <input type="password" id="new-password" name="new-password" 
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:outline-none">
        </div>
        <!-- Confirm Password -->
        <div>
          <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
          <input type="password" id="confirm-password" name="confirm-password" 
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:outline-none">
        </div>
        <!-- Submit Button -->
        <button type="submit" 
          class="w-full px-6 py-3 bg-primary text-white rounded-xl hover:bg-primary-600 transition font-semibold">
          Update Password
        </button>
      </form>
    </div>

  </div>
</section>
