<section class="min-h-screen flex items-center justify-center bg-gray-50 md:ml-64 pt-16 md:pt-0 px-4">
  <div class="w-full max-w-4xl bg-white p-8 md:p-10 rounded-3xl shadow-2xl">
    <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">Settings</h2>

    <form action="/settings" method="POST" class="space-y-6">

      <!-- Row 1: Full Name + Email -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Full Name</label>
          <input type="text" name="name" value="John Doe"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Email</label>
          <input type="email" name="email" value="johndoe@example.com"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        </div>
      </div>

      <!-- Row 2: Phone + Date of Birth -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Phone</label>
          <input type="text" name="phone" value="+91 94128 92908"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Date of Birth</label>
          <input type="date" name="dob" value="2000-04-15"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        </div>
      </div>

      <!-- Row 3: Gender + Address -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Gender</label>
          <select name="gender"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none">
            <option selected>Male</option>
            <option>Female</option>
            <option>Other</option>
          </select>
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Address</label>
          <input type="text" name="address" value="123, ABC Street, Agra, Uttar Pradesh, India"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        </div>
      </div>

      <!-- Update Button -->
      <button type="submit"
        class="w-full py-4 bg-primary text-white rounded-xl shadow-lg hover:shadow-xl hover:bg-primary-600 transition-all duration-300 font-semibold">
        Update Settings
      </button>

    </form>
  </div>
</section>
