<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modern Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'primary': '#3b82f6',
            'primary-600': '#2563eb',
          }
        }
      }
    }
  </script>
</head>
<body class="bg-gray-50 font-sans">

  <div class="flex h-screen">

    <!-- Sidebar (desktop: fixed) -->
    <aside class="bg-white w-64 shadow-md flex flex-col h-full fixed z-20 left-0 top-0 hidden md:flex">
      <div class="p-6 text-center border-b">
        <h1 class="text-2xl font-bold text-gray-900">My Dashboard</h1>
      </div>
      <nav class="flex-1 p-6 space-y-4">
        <a href="#dashboard" class="nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200 hover:text-blue-600">
          <span class="material-icons align-middle mr-2">dashboard</span> Dashboard
        </a>
        <a href="/profile" class="nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200 hover:text-blue-600">
          <span class="material-icons align-middle mr-2">person</span> Profile
        </a>
        <a href="/settings" class="nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200 hover:text-blue-600">
          <span class="material-icons align-middle mr-2">settings</span> Settings
        </a>
      </nav>
    </aside>

    <!-- Mobile toggle button -->
    <button id="mobile-menu-btn" class="md:hidden fixed top-4 left-4 z-30 bg-white p-3 rounded-xl shadow-lg hover:shadow-xl transition-all duration-200">
      <span class="material-icons">menu</span>
    </button>

    <!-- Mobile Sidebar -->
    <div id="mobile-menu" class="fixed top-0 left-0 w-64 h-full bg-white shadow-lg transform -translate-x-full transition-transform duration-300 md:hidden z-40">
      <div class="p-6 border-b">
        <div class="flex justify-between items-center">
          <h1 class="text-xl font-bold text-gray-900">Dashboard</h1>
          <button id="close-sidebar" class="text-gray-500 hover:text-gray-700 p-2 rounded-lg hover:bg-gray-100">
            <span class="material-icons">close</span>
          </button>
        </div>
      </div>
      <nav class="p-6 space-y-4">
        <a href="#dashboard" class="mobile-nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200">
          <span class="material-icons align-middle mr-2">dashboard</span> Dashboard
        </a>
        <a href="/profile" class="mobile-nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200">
          <span class="material-icons align-middle mr-2">person</span> Profile
        </a>
        <a href="/settings" class="mobile-nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200">
          <span class="material-icons align-middle mr-2">settings</span> Settings
        </a>
      </nav>
    </div>

    <!-- Main content -->
    <main class="flex-1 ml-0 md:ml-64 p-6 overflow-y-auto">
      
      <!-- Header -->
      <header class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome back, John!</h1>
        <p class="text-gray-600">Here's what's happening with your business today.</p>
      </header>

      <!-- Stats Cards -->
      <div id="dashboard" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border border-gray-100">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-blue-100 rounded-2xl">
              <span class="material-icons w-8 h-8 text-blue-600">group</span>
            </div>
            <span class="text-green-500 text-sm font-semibold bg-green-50 px-3 py-1 rounded-full">+12%</span>
          </div>
          <p class="text-gray-500 font-medium text-sm">Total Users</p>
          <h2 class="text-3xl font-bold mt-2 text-gray-900">1,245</h2>
          <p class="text-gray-400 text-xs mt-2">+150 since last month</p>
        </div>

        <div class="bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border border-gray-100">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-green-100 rounded-2xl">
              <span class="material-icons w-8 h-8 text-green-600">paid</span>
            </div>
            <span class="text-green-500 text-sm font-semibold bg-green-50 px-3 py-1 rounded-full">+8%</span>
          </div>
          <p class="text-gray-500 font-medium text-sm">Revenue</p>
          <h2 class="text-3xl font-bold mt-2 text-gray-900">$24,500</h2>
          <p class="text-gray-400 text-xs mt-2">+$1,800 since last month</p>
        </div>

        <div class="bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border border-gray-100">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-purple-100 rounded-2xl">
              <span class="material-icons w-8 h-8 text-purple-600">person_add</span>
            </div>
            <span class="text-red-500 text-sm font-semibold bg-red-50 px-3 py-1 rounded-full">-2%</span>
          </div>
          <p class="text-gray-500 font-medium text-sm">New Signups</p>
          <h2 class="text-3xl font-bold mt-2 text-gray-900">320</h2>
          <p class="text-gray-400 text-xs mt-2">-7 since last week</p>
        </div>

        <div class="bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border border-gray-100">
          <div class="flex items-center justify-between mb-4">
            <div class="p-3 bg-orange-100 rounded-2xl">
              <span class="material-icons w-8 h-8 text-orange-600">inventory_2</span>
            </div>
            <span class="text-yellow-500 text-sm font-semibold bg-yellow-50 px-3 py-1 rounded-full">+1%</span>
          </div>
          <p class="text-gray-500 font-medium text-sm">Pending Orders</p>
          <h2 class="text-3xl font-bold mt-2 text-gray-900">58</h2>
          <p class="text-gray-400 text-xs mt-2">+1 since yesterday</p>
        </div>
      </div>

      <!-- Charts Section -->
      <div id="analytics" class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="bg-white rounded-3xl shadow-lg p-6 border border-gray-100">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Revenue Trend</h3>
          <div class="h-64 flex items-end justify-around space-x-2">
            <div class="flex flex-col items-center">
              <div class="bg-blue-500 rounded-t-lg mb-2 w-12 transition-all duration-500 hover:bg-blue-600" style="height: 120px;"></div>
              <span class="text-xs text-gray-500">Jan</span>
            </div>
            <div class="flex flex-col items-center">
              <div class="bg-blue-500 rounded-t-lg mb-2 w-12 transition-all duration-500 hover:bg-blue-600" style="height: 180px;"></div>
              <span class="text-xs text-gray-500">Feb</span>
            </div>
            <div class="flex flex-col items-center">
              <div class="bg-blue-500 rounded-t-lg mb-2 w-12 transition-all duration-500 hover:bg-blue-600" style="height: 150px;"></div>
              <span class="text-xs text-gray-500">Mar</span>
            </div>
            <div class="flex flex-col items-center">
              <div class="bg-blue-500 rounded-t-lg mb-2 w-12 transition-all duration-500 hover:bg-blue-600" style="height: 200px;"></div>
              <span class="text-xs text-gray-500">Apr</span>
            </div>
            <div class="flex flex-col items-center">
              <div class="bg-blue-500 rounded-t-lg mb-2 w-12 transition-all duration-500 hover:bg-blue-600" style="height: 160px;"></div>
              <span class="text-xs text-gray-500">May</span>
            </div>
            <div class="flex flex-col items-center">
              <div class="bg-blue-500 rounded-t-lg mb-2 w-12 transition-all duration-500 hover:bg-blue-600" style="height: 220px;"></div>
              <span class="text-xs text-gray-500">Jun</span>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-3xl shadow-lg p-6 border border-gray-100">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Traffic Sources</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-4 h-4 bg-blue-500 rounded mr-3"></div>
                <span class="text-gray-700">Organic Search</span>
              </div>
              <span class="font-semibold">45%</span>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-4 h-4 bg-green-500 rounded mr-3"></div>
                <span class="text-gray-700">Direct Traffic</span>
              </div>
              <span class="font-semibold">30%</span>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-4 h-4 bg-purple-500 rounded mr-3"></div>
                <span class="text-gray-700">Social Media</span>
              </div>
              <span class="font-semibold">15%</span>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-4 h-4 bg-orange-500 rounded mr-3"></div>
                <span class="text-gray-700">Referrals</span>
              </div>
              <span class="font-semibold">10%</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Settings Section -->
      <div id="settings" class="bg-white rounded-3xl shadow-lg p-6 border border-gray-100">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Settings</h2>
        <form class="space-y-6">
          <div>
            <label class="block text-gray-700 font-semibold mb-2">Username</label>
            <input type="text" class="w-full border border-gray-200 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="JohnDoe">
          </div>
          <div>
            <label class="block text-gray-700 font-semibold mb-2">Email</label>
            <input type="email" class="w-full border border-gray-200 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="john@example.com">
          </div>
          <div>
            <label class="block text-gray-700 font-semibold mb-2">Password</label>
            <input type="password" class="w-full border border-gray-200 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="••••••••">
          </div>
          <button class="bg-blue-500 text-white px-6 py-2 rounded-xl hover:bg-blue-600 transition-colors font-semibold">Save Changes</button>
        </form>
      </div>

    </main>

  </div>

  <script>
    // Mobile sidebar toggle
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeBtn = document.getElementById('close-sidebar');

    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.remove('-translate-x-full');
    });

    closeBtn.addEventListener('click', () => {
      mobileMenu.classList.add('-translate-x-full');
    });
  </script>

</body>
</html>
