<!-- Contact Page -->

<!-- Import Google Material Icons -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- Hero Section -->
<section class="relative pt-28 bg-gradient-to-r from-primary to-cyan-500 text-white overflow-hidden">
  <div class="max-w-6xl mx-auto px-6 py-20 text-center relative z-10">
    <h1 class="text-5xl md:text-6xl font-montserrat font-black mb-6 leading-tight">
      CONTACT
      <span class="block text-yellow-300">POORIPADHAI</span>
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-white/90 max-w-3xl mx-auto font-open-sans">
      Have questions, suggestions, or feedback? We’d love to hear from you.
    </p>
  </div>

  <!-- Decorative Wave -->
  <div class="absolute bottom-0 w-full overflow-hidden leading-none">
    <svg class="relative block w-full h-20 text-gray-50" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none"
      viewBox="0 0 1200 120">
      <path
        d="M321.39 56.59C198.61 82.11 95.78 77.87 0 54.8V120h1200V16.48c-89.63-16.69-187.14-19.87-288.17-6.82-74.42 9.46-148.69 29.1-229.28 50.07-109.91 28.41-230.34 43.69-361.16-3.14z"
        fill="currentColor"></path>
    </svg>
  </div>
</section>

<!-- Contact Content Section -->
<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-16 items-start">

    <!-- Left Contact Info -->
    <div>
      <h2 class="text-4xl md:text-5xl font-montserrat font-bold text-secondary mb-6">Get in Touch</h2>
      <p class="text-gray-700 leading-relaxed text-lg md:text-xl mb-8">
        Whether you’re a student looking for guidance, a teacher wanting to collaborate,
        or just someone with great ideas—we’re here to listen.
      </p>

      <ul class="space-y-6 text-lg md:text-xl text-gray-700">
        <li class="flex items-center gap-3">
          <span class="material-icons text-primary">location_on</span>
          <span>123 Education Street, New Delhi, India</span>
        </li>
        <li class="flex items-center gap-3">
          <span class="material-icons text-primary">email</span>
          <span>support@pooripadhai.com</span>
        </li>
        <li class="flex items-center gap-3">
          <span class="material-icons text-primary">phone</span>
          <span>+91 98765 43210</span>
        </li>
      </ul>
    </div>

    <!-- Right Contact Form -->
    <div class="bg-white shadow-2xl rounded-3xl p-8 md:p-10">
      <form class="space-y-6">
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Your Name</label>
          <input type="text" placeholder="Enter your name"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Email Address</label>
          <input type="email" placeholder="Enter your email"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Message</label>
          <textarea rows="5" placeholder="Write your message"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none"></textarea>
        </div>
        <button type="submit"
          class="w-full px-10 py-4 bg-primary text-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 font-montserrat font-bold text-lg">
          Send Message
        </button>
      </form>
    </div>

  </div>
</section>

<!-- Call to Action -->
<section class="py-20 bg-gradient-to-r from-primary to-cyan-500 text-white">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2 class="text-4xl md:text-5xl font-montserrat font-black mb-6">Let’s Work Together</h2>
    <p class="text-xl md:text-2xl mb-8 text-white/90">
      Join us in making education more accessible and effective for every student.
    </p>
    <a href="/"
      class="inline-block px-10 py-4 bg-white text-primary rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 font-montserrat font-bold text-lg">
      Back to Home
    </a>
  </div>
</section>