<script>
    document.addEventListener('DOMContentLoaded', () => {
        const sidebar = document.getElementById('sidebar');
        const closeSidebar = document.getElementById('closeSidebar');
        const overlay = document.getElementById('overlay');
        const bottomToggleBtn = document.getElementById('bottomToggleBtn');

        function openSidebar() {
            sidebar.classList.remove('-translate-x-full');
            overlay.classList.remove('hidden');
            document.body.classList.add('overflow-hidden');
        }

        function closeSidebarFn() {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.add('hidden');
            document.body.classList.remove('overflow-hidden');
        }

        bottomToggleBtn.addEventListener('click', openSidebar);
        closeSidebar.addEventListener('click', closeSidebarFn);
        overlay.addEventListener('click', closeSidebarFn);

        // Navigation active states
        const navItems = document.querySelectorAll('.nav-item');
        navItems.forEach(item => {
            item.addEventListener('click', function (e) {
                e.preventDefault();
                navItems.forEach(nav => {
                    nav.classList.remove('active', 'bg-primary', 'text-white');
                    nav.classList.add('text-gray-700', 'hover:bg-gray-100');
                    nav.querySelector('span').classList.remove('bg-white');
                    nav.querySelector('span').classList.add('bg-gray-400');
                });
                this.classList.add('active', 'bg-primary', 'text-white');
                this.classList.remove('text-gray-700', 'hover:bg-gray-100');
                this.querySelector('span').classList.add('bg-white');
                this.querySelector('span').classList.remove('bg-gray-400');

                // Close sidebar on mobile after click
                if (window.innerWidth < 1024) {
                    closeSidebarFn();
                }
            });
        });

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    });
</script>