<!-- Mobile Header + Toggle Button -->
<header class="md:hidden fixed top-0 left-0 w-full bg-white z-30 shadow-md flex items-center justify-between px-4 py-3">
    <!-- Logo + Company Name -->
    <a href="/" class="flex items-center gap-2">
        <img src="/assets/img/logo.png" alt="POORIPADHAI Logo" class="w-8 h-8 object-contain">
        <span class="text-lg font-bold text-gray-900">POORIPADHAI</span>
    </a>

    <!-- Menu Toggle Button -->
    <button id="mobile-menu-btn" class="p-2 rounded-lg bg-gray-100 hover:bg-gray-200 transition">
        <span class="material-icons">menu</span>
    </button>
</header>


<!-- Mobile Sidebar -->
<div id="mobile-menu"
    class="fixed top-0 left-0 w-64 h-full bg-white shadow-lg transform -translate-x-full transition-transform duration-300 z-40">

    <!-- Sidebar Header -->
    <div class="p-6 border-b flex justify-between items-center">
        <h1 class="text-xl font-bold text-gray-900">Menu</h1>
        <button id="close-sidebar" class="text-gray-500 hover:text-gray-700 p-2 rounded-lg hover:bg-gray-100">
            <span class="material-icons">close</span>
        </button>
    </div>

    <!-- Sidebar Navigation -->
    <nav class="p-6 space-y-4">
        <a href="/dashboard"
            class="mobile-nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200">
            <span class="material-icons align-middle mr-2">dashboard</span> Dashboard
        </a>
        <a href="/profile"
            class="mobile-nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200">
            <span class="material-icons align-middle mr-2">person</span> Profile
        </a>
        <a href="/settings"
            class="mobile-nav-link block py-3 px-4 rounded-xl hover:bg-blue-50 font-semibold text-gray-700 transition-all duration-200">
            <span class="material-icons align-middle mr-2">settings</span> Settings
        </a>
    </nav>
</div>

<script>
    // Mobile sidebar toggle
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeBtn = document.getElementById('close-sidebar');

    menuBtn.addEventListener('click', () => {
        mobileMenu.classList.remove('-translate-x-full');
    });

    closeBtn.addEventListener('click', () => {
        mobileMenu.classList.add('-translate-x-full');
    });

    // Close sidebar when clicking outside (optional)
    document.addEventListener('click', (e) => {
        if (!mobileMenu.contains(e.target) && !menuBtn.contains(e.target)) {
            mobileMenu.classList.add('-translate-x-full');
        }
    });
</script>